# Pacific Track Credentials
# Login email for Pacific Track (vtx.pacifictrack.com)
PACIFIC_TRACK_EMAIL=
# Login password for Pacific Track
PACIFIC_TRACK_PASSWORD=

# Supabase Configuration
# Supabase project URL (e.g., https://xxx.supabase.co)
SUPABASE_URL=
# Supabase anon key (service role key)
SUPABASE_SERVICE_KEY=

# Service Account (for API authentication)
# Sync service Supabase user email
SERVICE_ACCOUNT_EMAIL=vtx-sync@smartctc.com
# Sync service Supabase user password
# NOTE: For local dev, wrap passwords with special characters in quotes: "pass&word#123"
# For Railway production, do NOT use quotes - enter raw password in the UI
SERVICE_ACCOUNT_PASSWORD=

# VTX Uploads API
# Backend API base URL
VTX_UPLOADS_API_URL=https://vtx-uploads-production.up.railway.app

# Notifications
# Email address for failure alerts (legacy, used by notifier.ts)
ALERT_EMAIL=team@smartctc.com

# Resend Email Notifications (optional)
# Resend API key for sending email notifications
# Get your API key from https://resend.com
RESEND_API_KEY=
# Recipient email address for notifications
NOTIFICATION_EMAIL_TO=team@smartctc.com
# Sender email address (must be verified in Resend)
NOTIFICATION_EMAIL_FROM=vtx-sync@notifications.smartctc.com
# Enable email notifications: 'true' to enable, 'false' or unset to disable
ENABLE_EMAIL_NOTIFICATIONS=false

# Runtime Configuration
# Timezone for cron schedule (America/Los_Angeles for Pacific Time)
TZ=America/Los_Angeles
# Environment: 'development' or 'production'
NODE_ENV=production
# Port for healthcheck server
PORT=3000
# Maximum random delay before sync in milliseconds (0-60000, default: 60000 = 60 seconds)
# This spreads out requests to avoid predictable load patterns
SYNC_DELAY_MAX_MS=60000
# Delay before retry on failure in milliseconds (default: 300000 = 5 minutes)
# Reduce to 5000 (5 seconds) for testing
RETRY_DELAY_MS=300000
# Browser user agent string (identifies the automation)
USER_AGENT=CleanTruckCheckPro-Sync/1.0 (automated; contact: team@smartctc.com)
# Run browser in headless mode: 'false' to show browser (useful for debugging)
HEADLESS=true

# Scheduler Configuration
# Enable cron scheduler: 'true' to enable, 'false' or unset to disable
# Disabling prevents duplicate syncs when running locally while production is also running
ENABLE_CRON=false

# Circuit Breaker Configuration
# Note: Circuit breaker threshold and reset hours are currently hardcoded in code
# Threshold: 5 consecutive failures (configurable in src/utils/circuitBreaker.ts)
# Reset hours: 1 hour (configurable in src/utils/circuitBreaker.ts)
# Future: These may be made configurable via environment variables
